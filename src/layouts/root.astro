---
import '@fontsource/albert-sans'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      href='/favicon.ico'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body
    class='flex flex-col min-h-screen text-brand-white bg-brand-black font-sans'>
    <main class='flex flex-col w-full px-4 max-w-screen-sm mx-auto'>
      <slot />
    </main>
    <footer class='text-center mt-auto py-6 text-opacity-40'>
      Home by{' '}
      <a
        class='hover:text-opacity-100'
        target='_blank'
        href='https://github.com/tarsisius'
        rel='noopener noreferrer'>
        @tarsisius
      </a>
    </footer>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
